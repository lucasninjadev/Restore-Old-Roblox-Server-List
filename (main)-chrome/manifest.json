{
  "manifest_version": 3,
  "name": "Restore Old Roblox Server List",
  "description": "Restores the old roblox server list & allows searching of users through their username",
  "author": "Lucas",
  "version": "2.0.3",
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "action": {
    "default_icon": "images/128x128.png",
    "default_title": "Settings",
    "default_popup": "html/settings.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.roblox.com/games/",
    "*://*.roblox.com/*/games/"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "html/main.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "js/libraries/jquery-3.6.1.min.js",
        "js/pages/content.js"
      ],
      "css": [
        "css/main.css"
      ],
      "matches": [
        "*://*.roblox.com/games/*",
        "*://*.roblox.com/*/games/*"
      ],
      "run_at": "document_end"
    }
  ]
}
